{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "declaration": false,
    "lib": ["ES2022"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDirs": ["./src"],
    "removeComments": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules"
  ]
}
